<UserControl x:Class="FindAncestor.ImageDisplayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:FindAncestor.ViewModels"
             xmlns:local="clr-namespace:FindAncestor.Views">
    <UserControl.DataContext>
        <vm:ImageDisplayViewModel />
    </UserControl.DataContext>

    <StackPanel Margin="10">
        <!-- サイズ指定リスト -->
        <TextBlock Text="表示サイズを選択" FontWeight="Bold"/>
        <ComboBox ItemsSource="{Binding DisplaySizes}"
                  SelectedItem="{Binding SelectedDisplaySize}"
                  DisplayMemberPath="Name"
                  Width="200"/>

        <!-- 横スクロール表示 -->
        <Button Content="1行スクロール表示"
                Command="{Binding OpenScroll1RowCommand}"
                Width="200"
                Margin="0,5,0,5"/>

        <!-- ここにスライドショーを表示 -->
        <local:Scroll1RowView Height="{Binding SelectedDisplaySize.Height}"
                               Width="{Binding SelectedDisplaySize.Width}"/>
    </StackPanel>
</UserControl>